<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Category</display-name>
    <description>Category of a blog post</description>
    <super-type>base:structured</super-type>
    <content-display-name-script>$('title')</content-display-name-script>
    <form>
        <input type="TextLine" name="title">
            <label>Title</label>
            <occurrences minimum="1" maximum="1"/>
        </input>

        <input type="TextLine" name="description">
            <label>Description</label>
            <occurrences minimum="0" maximum="1"/>
        </input>

        <input type="ImageSelector" name="image">
            <label>Image</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
    </form>
</content-type>
